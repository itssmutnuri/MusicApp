<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.MainActivity">

    <TextView
        android:id="@+id/purchaseTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_weight="0"
        android:fontFamily="serif"
        android:padding="30dp"
        android:text="Payment Gateway"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/purchaseText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:padding="30dp"
        android:text="@string/purchase_screen"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/offlineLibrary"
        android:background="#BDBDBD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_weight="0"
        android:fontFamily="serif"
        android:padding="30dp"
        android:text="@string/offline_songs"
        android:textAlignment="center"
        android:textSize="20sp" />

</LinearLayout>
